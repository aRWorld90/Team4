function [formfactor, fillingratio, maxsize, minsize] = caracteristicas (listado, directory)  %entrem les variables directory i el listado

for i=1:length(listado)               
    fileID = fopen(listado(i).name);                  %obrim cadascun dels arxius del llistat com a binari 
    tline=fgetl(fileID)                               % opció1: i els llegim línia a línia (tline(1) serà nomes un nº, per exemple si el primer es 245.25000 el tline(1) només serà el '2', tline(2) serà '4', etc. 
    c=textscan(fileID,'%f %f %f %f %s');              % opció2: introduïm a C les diferents característiques, mirar cas nº i=6 (cas amb
                                                      % dues senyals en un mateix arxiu!!!) per veure com reacciona
end
end
   
